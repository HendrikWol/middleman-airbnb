<!-- source/flats/show.html.erb -->
<% flat = data.flats[owner] %>

<!-- Access data.flats with owner's name as key -->
<div class="flat-banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>');">
</div>

<div class="profile-container">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <div class="profile">
          <!-- Inject flat data in template -->
        <div class="profile-box">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "profile-img" %>
          <p><%= flat.name %></p>
          </div>
          <div class="profile-description">
            <h1><%= flat.description %></h1>
            <p><%= flat.city_name %></p>
            <% flat.rating.times do %>
            <i class="fa fa-star"></i>
            <%end%>

          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6">
        <form action="#">
          <h4>Book this flat</h4>
          <div class="row">
            <div class="col-xs-6">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="checkin" id="checkin">
              </div>
            </div>
          <div class="form-group">
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkout" id="checkout">
              </div>
              </div>
          </div>
          <div class="form-group">
            <select name id="guests" class="form-group choose">
              <option value="1">1 guest</option>
              <option value="2">2 guest</option>
              <option value="3">3 guest</option>
            </select>
          </div>
          <input type="submit" class="btn btn-danger" value="Book it">
        </form>
      </div>
  </div>
</div>

<div class="info-container">
  <h2>About this place</h2>
  <p><%= flat.flat_description %></p>
    <hr>
    <div class="row">
      <div class="col-xs-12 col-sm-2">
        The Space
      </div>
      <div class="col-xs-12 col-sm-4">
        <ul class="list-unstyled">
          <li>Accommodates: <strong><%= flat.accommodates %></strong></li>
          <li>Bathrooms: <strong><%= flat.bathrooms %></strong></li>
          <li>Bed type: <strong><%= flat.bed_type %></strong></li>
        </ul>
      </div>
       <div class="col-xs-12 col-sm-4">
        <ul class="list-unstyled">
          <li>Property type: <strong><%= flat.property_type %></strong></li>
          <li>Bedrooms: <strong><%= flat.bedrooms %></strong></li>
        </ul>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-xs-12 col-sm-2">
        Amenities
      </div>
      <div class="col-xs-12 col-sm-4">
        <ul class="list-unstyled">
          <li>Wifi: <strong><%= flat.wifi %></strong></li>
          <li>Welcome drink: <strong><%= flat.welcome_drink %></strong></li>
        </ul>
      </div>
       <div class="col-xs-12 col-sm-4">
        <ul class="list-unstyled">
          <li>TV: <strong><%= flat.tv %></strong></li>
          <li>Kitchen: <strong><%= flat.kitchen %></strong></li>
        </ul>
      </div>
    </div>
</div>













